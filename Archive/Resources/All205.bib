@phdthesis{Kelly2012,
abstract = {Decision making forms an important part of our everyday lives and is commonly impaired after a severe traumatic brain injury (TBI). Past research examining decision making in individuals with TBI has predominantly relied on a non-social card playing game, the Iowa Gambling Task (IGT). The IGT is proposed to be indicative of real-world decision making abilities, and impairments on this task directly comparable to inappropriate social decisions (Bechara, Damasio, Damasio, \& Andersson, 1994; Bechara, Damasio, \& Damasio, 2000). However, there is little evidence to suggest that this task is indeed indicative of real-world social decision making capabilities. This thesis presents the development of an alternative experimental paradigm, specifically designed for assessing decision making within a social context. Study 1 presents the development of a novel task for examining decision making in a social context. Fifty-two undergraduate university students completed the novel task, the Social Decision Making Task (SDMT), as well as the Iowa Gambling Task (IGT), and screening measures. The SDMT requires that participants play a ‘pseudo’ online game of catch-and throw with the aim of trying to get the ball returned to them as many times as possible. A throw to two of the players is regarded a ‘good choice’ as they return the ball at higher probabilities than the two other players, who are regarded ‘bad choices’. Over time participants learnt who the friendly players were, that is, they learnt who threw the ball back to them most, and adjusted their behaviour accordingly. Performance on the SDMT was not associated with performance on a cognitive decision making task (IGT), probability learning, or age, gender, or estimated intelligence. iv Study 2 (a) invited 26 adults with a severe TBI, and 24 matched healthy control participants to complete the SDMT and the IGT. Consistent with predictions, the control group made significantly more advantageous social choices on the SDMT than the TBI group, however, improvement in performance over time was similar for both groups. Performance on the SDMT was not significantly affected by estimated intelligence or mood. Study 2 (b) replicated and extended upon results from Study 2 (a) in a second sample of 19 adults with a severe TBI and 19 matched control participants. The SDMT on this occasion was extended to allow participants twice as many learning trials (200). Replicating Study 2 (a), adults with TBI improved decision making over time, however, their overall number of good social choices was less than that of the healthy control participants resulting in less social interaction over time. In both Study 2 (a) and Study 2 (b) group differences were not observed for the IGT, failing to replicate past research. In line with predictions, no association was observed between performance on the social (SDMT) and non-social (IGT) decision making tasks. Study 3 examined neuropsychological test performance, social cognition, and social and behavioural outcomes in relation to performance on the SDMT and the IGT. Reversal learning and drive were both found to be significantly more closely associated with performance on the SDMT than on the IGT, while there was a trend for the association between performance on the SDMT and theory of mind. The role of these three factors in social decision making provided novel evidence that the inability to acknowledge relevant feedback from the social environment, and use this information to guide future behaviour, is essential in successful social interactions. v Studies 1-3 highlighted two important facts, firstly, the need for an experimental task for examining decision making in social contexts, and secondly, that deficits in this area may be due to the failure of adults with TBI to use social cues to guide behaviour. In order to examine whether adults with TBI were sensitive to social cues, a slightly different ball-tossing paradigm (Cyberball: Williams, Cheung, \& Choi, 2000) was employed to create the experience of social exclusion. Given that adults with a brain injury are often socially isolated, and often show impaired physiological reactivity to emotionally laden stimuli, the following studies aimed to; 1) establish the normal physiological response to ostracism, 2) determine if adults with TBI are cognitively aware of ostracism and are negatively affected by the experience, and, 3) determine whether adults with TBI have the same physiological response to ostracism as healthy control participants. Study 4 examines the psychophysiological correlates of ostracism in 42 undergraduate university students. Participants displayed higher skin conductance levels during the ostracism condition when compared with the inclusion condition, suggesting ostracism induces stress. The psychological effects of ostracism were also examined, and results here supported the negative effects on an individual’s sense of belonging, self- esteem, meaningful-existence, control, and mood, that are often reported in the literature. Study 5 examined the psychological effects of ostracism on 20 adults with severe TBI and 19 matched control participants. The TBI group self-reported negative psychological effects of ostracism including a lower sense of belonging, self-esteem, and meaningful existence, however, were affected to a lesser degree than healthy control participants. Study 6 examined the psychological and physiological effects of ostracism in 14 adults with TBI and 16 matched control participants. Preliminary data suggest little difference between groups on self-reported effects, however, while not significant, the observed trend suggests that participants with a TBI display a different physiological response to ostracism than control participants. Specifically, they displayed higher levels of arousal during the inclusion condition, when contrasted with the ostracism condition. This finding is discussed in terms of the consequences of impoverished physiological responses in motivating people to employ strategies that will lead to social re-engagement. This empirical investigation provides preliminary evidence for the utility of a novel task for assessing decision making in social contexts following TBI. Examining the determinants of poor social decision making, as well as the role of physiological markers in responding to social cues, provides a significant contribution to the literature on social cognition. The importance of these findings is magnified by the incidence of mental illness in adults with TBI, and the understanding of the role of social isolation in this process.},
annote = {Study 4 was publihed, and is included in search 1. Study 5 is not published as of 14 nov 2012.},
author = {Kelly, Michelle},
school = {University of New South Wales},
title = {{Mechanisms and consequences of impaired decision making in social contexts following severe traumatic brain injury}},
type = {Dissertation},
url = {http://scholar.google.nl/scholar\_url?hl=en\&q=http://unsworks.unsw.edu.au/fapi/datastream/unsworks:10683/SOURCE01\&sa=X\&scisig=AAGBfm3ozWAlV6va5ESbpbaX2mk\_g6eesw\&oi=scholaralrt},
year = {2012}
}
@article{Kelly2012a,
abstract = {Social exclusion, or ostracism, is universally perceived as a negative emotional experience and often leads to poor social outcomes for individuals and society. Although the experience of distress associated with being ostracized is innate, there has been very little investigation of the effects on the autonomic nervous system. This study provides objective evidence for the effects of ostracism on arousal (examined with skin conductance levels) while participants played an internet ball-tossing game (Cyberball). Forty-two healthy undergraduate students participated in both inclusion and ostracism conditions. When participants were included, there was a marked decrement in arousal over the course of the task, whereas there was no evidence of habituation when participants were ostracized. The implications of these results are discussed in terms of the potential of differential autonomic activity to predict the coping strategies that people engage in following ostracism.},
